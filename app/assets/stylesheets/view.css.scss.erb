@font-face {
    font-family: 'GibsonBold';
    src: url('<%= asset_path "Gibson-Bold.otf"%>');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Tungsten';
    src: url('<%= asset_path "Tungsten-Semibold.otf"%>');
    font-weight: normal;
    font-style: normal;
}

* {
  -webkit-box-sizing: border-box;
}

html{
  background: #282828;
}

body {
  background-color: #faf6eb;
  width: 520px;
  padding: 50px;
  -webkit-user-drag: none;
  -webkit-user-select: none;

  position: relative;
  margin: auto;
  height: 800px;

  overflow: hidden;
}


#conveyor {
  position: relative;
  margin-bottom: 40px;
  z-index: 1000;
}

  #conveyor li {
    display: inline-block;
  }

#interaction {
  position: relative;
  width: 100%;
  height: 800px;
  background-color: #ecd8a2;
  background-image: url(<%= asset_path "man.png"%>);
  background-position: -140px 0;
  -webkit-transition: background-color .5s linear;
} 

  #interaction.dying-1 {
    background-color: #f2e7c1;
  }
  #interaction.dying-2 {
    background-color: #dedede;
  }
  #interaction.dying-3 {
    background-color: #cedbe6;
  }
  #interaction.dying-4 {
    background-color: #9cb4c6;
  }

  #heart {
    position: absolute;
    width: 125px;
    height: 120px;
    background: url(<%= asset_path "heart.png"%>) no-repeat;
    cursor: pointer;
    top: 200px;
    left: 80px;
    border: 0;
  }
  
  #heart:active, #heart.press {
    background-position: 0 -110px;
  }
  
  .heart-overlay {
    position: absolute;
    top: -200px;
    left: 107px;
    width: 75px;
    height: 65px;
    background: url(<%= asset_path "heart-overlay.png"%>);
    background-repeat: no-repeat;
    opacity: 0.5;
    -webkit-animation-name: heartentry;
    -webkit-animation-duration: 10s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-timing-function: ease;

  }

    .heart-overlay.hit{
      -webkit-transition: all 0.5s ease;
      -webkit-transform: scale(4.0);
      opacity: 0 !important;
      background: url(<%= asset_path "heart-success.png"%>);
      background-repeat: no-repeat;
      width: 400px;
      height: 400px;
    }

    .heart-overlay.miss{
      -webkit-transition: all 0.5s ease;
      -webkit-transform: scale(4.0);
      opacity: 0 !important;
      background: url(<%= asset_path "heart-fail.png"%>);
      background-repeat: no-repeat;
      width: 83px;
      height: 66px;
    
    }

  
  time {
    position: absolute;
    right: 0;
    top: 0;
    width: 176px;
    height: 107px;
    background: pink;
    color: #444;
    font-size: 60px;
    text-align: center;
    vertical-align: middle;
    font-family: GibsonBold;
    padding-top: 24px;
    background: #e8ebed;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    overflow: hidden;
    border: solid 3px #96938d;
    -webkit-box-shadow: 0 3px 3px rgba(0,0,0,.1);
    text-shadow: 0 1px 1px rgba(255,255,255,.9);
  }
  
    time:before {
      content: '';
      display: block;
      position: absolute;
      z-index: 99;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url(<%= asset_path "countdown-shine.png"%>);
    }
    
  #encourage {
    position: absolute;
    width: 175px;
    text-align: center;
    font-family: Tungsten;
    color: #d9863c;
    font-size: 52px;
    line-height: .8;
    text-transform: uppercase;
    -webkit-font-smoothing: antialiased;
    right: -20px;
    top: 140px;
    -webkit-transform: rotateZ(-3deg);
    -webkit-animation-name: entrance;
    -webkit-animation-duration: .9s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-timing-function: ease;
  }
  
      @-webkit-keyframes entrance {
        from {
          -webkit-transform: scale(2.0) rotateZ(0deg);
          opacity: 0;
              
        }
        to {
          -webkit-transform: scale(1.0) rotateZ(-3deg);
          opacity: 1;
        }
      }

.pane{
  position: absolute;
  width: 520px;
  height: 800px;
  top: 0px;
  left: 520px;
  -webkit-transition: left 0.3s ease;
  background-color: #faf6eb;
  padding: 50px;

  &.onscreen{
    left: 0px;
  }

  &.left{
    left: -520px;
  }
}

.audiojs{
  display: none;
}

#finish {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255,255,255,.8);
  z-index: 999;
  -webkit-animation-name: fade-in;
  -webkit-animation-duration: .3s;
  -webkit-animation-iteration-count: 1;
  -webkit-animation-timing-function: linear;
}

    @-webkit-keyframes fade-in {
      from {
        opacity: 0;
            
      }
      to {
        opacity: 1;
      }
    }

  #finish div {
    width: 300px;
    background-color: hsl(0, 0%, 95%);
    margin: 50% auto;
    position: relative;
    top: -200px;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    border: solid 3px hsl(0, 0%, 85%);
    padding: 30px;
    text-align: center;
    -webkit-box-shadow: 
      inset 0 30px 90px rgba(255,255,255,.65),
            0 20px 30px rgba(0,0,0,.1);
    -webkit-animation-name: pop-in;
    -webkit-animation-duration: .8s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-timing-function: ease;
  }
  
      @-webkit-keyframes pop-in {
        from {
          -webkit-transform: scale(3);
              
        }
        40% {
          -webkit-transform: scale(.9);
        }
        to {
         -webkit-transform: scale(1);
        }
      }
  
  #finish h1 {
    font-size: 30px;
    font-family: GibsonBold;
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
  }
  
  #finish span {
    color: #88a362;
  }
  
  #finish p {
    margin-top: 20px;
    font-size: 12px;
    text-align: left;
    line-height: 1.5;
  }
  
  #finish a {
    font-weight: bold;
    color: #ee1b2e;
  }

#landing_pane{
  padding: 0;
}